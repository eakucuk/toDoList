@model ToDoList2.Models.DoList

@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #container {
        width: 250px;
        height: 100px;
        position: absolute;
        left: 40%;
        top: 30%;
    }
</style>
<link href="~/Scripts/ekscript/jquery.datetimepicker.css" rel="stylesheet" />
<link rel="stylesheet" type="text/css" href="~/Content/bootstrap-datepicker.css" />


<div id="container">

    @using (Html.BeginForm("Guncelle", "Home", FormMethod.Post))
    {
        <div class="form-group">
            <label class="col-sm-2 col-form-label">Yapılacak İş: </label>
            @Html.TextBoxFor(m => m.toDo, new { @class = "form-control" })
        </div>
        <br />
        <div class="form-group">
            <input type="text" id="datetimepicker" name="date" /><br><br>
        </div>
        <br />
        <br />

        @Html.HiddenFor(m => m.ID)
        <button type="submit" class="btn btn-dark">Kaydet</button>
    }
    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src='~/Scripts/bootstrap-datepicker.js'></script>
    <script src="~/Scripts/ekscript/jquery.datetimepicker.js"></script>

    <script>
        $('#datetimepicker').datetimepicker({
            minDate: '-1970/01/01'
        });
    </script>
</div>
